import java.util.Scanner;

public class problems {

    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        String S = input.next();
        String T = input.next();
        System.out.print(S.length() + " ");
        System.out.println(T.length());
        System.out.print(S + " ");
        System.out.println(T);
    }
}
